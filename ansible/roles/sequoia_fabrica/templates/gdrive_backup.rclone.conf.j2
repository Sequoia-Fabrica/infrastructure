# Rclone configuration for Google Drive (OAuth)
# Generated by Ansible from template
# See: https://rclone.org/drive/

[{{ gdrive_backup.rclone_remote_name | default('gdrive') }}]
type = drive
scope = {{ gdrive_backup.rclone_scope | default('drive') }}
{% if gdrive_backup.rclone_client_id is defined and gdrive_backup.rclone_client_id %}
client_id = {{ gdrive_backup.rclone_client_id }}
{% endif %}
{% if gdrive_backup.rclone_client_secret is defined and gdrive_backup.rclone_client_secret %}
client_secret = {{ gdrive_backup.rclone_client_secret }}
{% endif %}
token = {{ gdrive_backup.rclone_token | to_json }}
{% if gdrive_backup.rclone_team_drive is defined and gdrive_backup.rclone_team_drive %}
team_drive = {{ gdrive_backup.rclone_team_drive }}
{% endif %}
{% if gdrive_backup.rclone_root_folder_id is defined and gdrive_backup.rclone_root_folder_id %}
root_folder_id = {{ gdrive_backup.rclone_root_folder_id }}
{% endif %}
